salesforce {
  fetch = {
    metadata = {
      include = [
        {
          metadataType = ".*"
          namespace = ""
          name = ".*"
        },
      ]
      exclude = [
        {
          metadataType = "Report"
        },
        {
          metadataType = "ReportType"
        },
        {
          metadataType = "ReportFolder"
        },
        {
          metadataType = "Dashboard"
        },
        {
          metadataType = "DashboardFolder"
        },
        {
          metadataType = "Document"
        },
        {
          metadataType = "DocumentFolder"
        },
        {
          metadataType = "Profile"
        },
        {
          metadataType = "PermissionSet"
        },
        {
          metadataType = "SiteDotCom"
        },
        {
          metadataType = "EmailTemplate"
          name = "MarketoEmailTemplates/.*"
        },
        {
          metadataType = "ContentAsset"
        },
        {
          metadataType = "CustomObjectTranslation"
        },
        {
          metadataType = "AnalyticSnapshot"
        },
        {
          metadataType = "WaveDashboard"
        },
        {
          metadataType = "WaveDataflow"
        },
        {
          metadataType = "StandardValueSet"
          name = "^(AddressCountryCode)|(AddressStateCode)$"
          namespace = ""
        },
        {
          metadataType = "Layout"
          name = "CollaborationGroup-Group Layout"
        },
        {
          metadataType = "Layout"
          name = "CaseInteraction-Case Feed Layout"
        },
      ]
    }
    data = {
      includeObjects = [
        "LoyaltyProgram",
        "LoyaltyProgramCurrency",
        "LoyaltyTierGroup",
        "LoyaltyTier",
        "BenefitType",
        "Benefit",
        "LoyaltyTierBenefit",
        "JournalType",
        "JournalSubType",
        "LoyaltyProgramBadge",
        "VoucherDefinition",
        "Promotion",
        "Account"
      ]

      saltoManagementFieldSettings = {
        defaultFieldName = "Is_Loyalty_Partner__c"
      }

      saltoIDSettings = {
        defaultIdFields = [
          "Id",
        ]
        overrides = [
          {
            objectsRegex = "Account"
            idFields = [
              "Name",
            ]
          },
          {
            objectsRegex = "LoyaltyProgram"
            idFields = [
              "Name",
            ]
          },
          {
            objectsRegex = "JournalSubType"
            idFields = [
              "Name",
            ]
          },
          {
            objectsRegex = "JournalType"
            idFields = [
              "Name",
            ]
          }
        ]
      }

      
    }
    fetchAllCustomSettings = false
    maxInstancesPerType = 5000
  }
  maxItemsInRetrieveRequest = 2500
}
